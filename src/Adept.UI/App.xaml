<Application x:Class="Adept.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Adept.UI"
             xmlns:converters="clr-namespace:Adept.UI.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/BaseStyles.xaml" />
                <ResourceDictionary Source="/Styles/ResponsiveStyles.xaml" />
                <ResourceDictionary Source="/Styles/AccessibilityStyles.xaml" />
                <ResourceDictionary Source="/Styles/AnimationStyles.xaml" />
                <ResourceDictionary Source="/Styles/TransitionStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Converters -->
            <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            <converters:RoleToBackgroundConverter x:Key="RoleToBackgroundConverter" />
            <converters:StringEqualityToVisibilityConverter x:Key="StringEqualityToVisibilityConverter" />
            <converters:BooleanToStatusConverter x:Key="BooleanToStatusConverter" />
            <converters:BooleanToColorConverter x:Key="BooleanToColorConverter" />
            <converters:BoolToStringConverter x:Key="BoolToStringConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>

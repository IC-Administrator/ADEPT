<Window x:Class="Adept.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Adept.UI"
        mc:Ignorable="d"
        Title="Adept AI Teaching Assistant"
        MinHeight="600" MinWidth="800"
        Height="720" Width="1024"
        Loaded="Window_Loaded"
        Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Main Tab Control -->
        <TabControl Grid.Row="1"
                    SelectedIndex="{Binding SelectedTabIndex}">

            <TabItem Header="Home">
                <TextBlock Text="Home Tab Content" VerticalAlignment="Center" HorizontalAlignment="Center" />
            </TabItem>

            <TabItem Header="Classes">
                <TextBlock Text="Classes Tab Content" VerticalAlignment="Center" HorizontalAlignment="Center" />
            </TabItem>

            <TabItem Header="Lesson Planner">
                <TextBlock Text="Lesson Planner Tab Content" VerticalAlignment="Center" HorizontalAlignment="Center" />
            </TabItem>

            <TabItem Header="Configuration">
                <TextBlock Text="Configuration Tab Content" VerticalAlignment="Center" HorizontalAlignment="Center" />
            </TabItem>

            <TabItem Header="System Status">
                <TextBlock Text="System Status Tab Content" VerticalAlignment="Center" HorizontalAlignment="Center" />
            </TabItem>
        </TabControl>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Height="28">
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>

            <StatusBarItem Grid.Column="0">
                <StackPanel Orientation="Horizontal">
                    <Ellipse x:Name="StatusEllipse" Width="12" Height="12" Margin="5,0" Fill="Gray" />
                    <TextBlock x:Name="StatusText" Text="Not Listening" />
                </StackPanel>
            </StatusBarItem>

            <StatusBarItem Grid.Column="2">
                <TextBlock>
                    <Run Text="Current Lesson: " />
                    <Run Text="None" FontWeight="SemiBold" />
                </TextBlock>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>

<Window x:Class="Adept.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Adept.UI"
        xmlns:viewmodels="clr-namespace:Adept.UI.ViewModels"
        mc:Ignorable="d"
        Title="Adept AI Teaching Assistant"
        MinHeight="600" MinWidth="800"
        Height="720" Width="1024"
        Loaded="Window_Loaded"
        Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Main Tab Control -->
        <TabControl Grid.Row="1"
                    SelectedIndex="{Binding SelectedTabIndex}">

            <TabItem Header="Home">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Chat Messages -->
                    <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Margin="10">
                        <ItemsControl ItemsSource="{Binding HomeViewModel.Messages}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="5" Padding="10" CornerRadius="5"
                                            Background="{Binding Role, Converter={StaticResource RoleToBackgroundConverter}}">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Role}" FontWeight="Bold" />
                                            <TextBlock Text="{Binding Content}" TextWrapping="Wrap" />
                                            <TextBlock Text="{Binding Timestamp, StringFormat='{}{0:HH:mm:ss}'}"
                                                       FontSize="10" HorizontalAlignment="Right" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Input Area -->
                    <Grid Grid.Row="1" Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0" Text="{Binding HomeViewModel.UserInput, UpdateSourceTrigger=PropertyChanged}"
                                 Padding="5" AcceptsReturn="True" TextWrapping="Wrap" MinHeight="40" MaxHeight="100"
                                 VerticalScrollBarVisibility="Auto" />

                        <Button Grid.Column="1" Content="Send" Margin="5,0,0,0" Padding="10,5" MinWidth="80"
                                Command="{Binding HomeViewModel.SendMessageCommand}" />

                        <Button Grid.Column="2" Content="Clear" Margin="5,0,0,0" Padding="10,5" MinWidth="80"
                                Command="{Binding HomeViewModel.ClearConversationCommand}" />
                    </Grid>

                    <!-- Busy Indicator -->
                    <Border Grid.Row="0" Grid.RowSpan="2" Background="#80000000" Visibility="{Binding HomeViewModel.IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="Processing..." Foreground="White" FontSize="16" HorizontalAlignment="Center" />
                            <ProgressBar IsIndeterminate="True" Width="200" Height="20" Margin="0,10,0,0" />
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>

            <TabItem Header="Classes">
                <TextBlock Text="Classes Tab Content" VerticalAlignment="Center" HorizontalAlignment="Center" />
            </TabItem>

            <TabItem Header="Lesson Planner">
                <TextBlock Text="Lesson Planner Tab Content" VerticalAlignment="Center" HorizontalAlignment="Center" />
            </TabItem>

            <TabItem Header="Configuration">
                <TextBlock Text="Configuration Tab Content" VerticalAlignment="Center" HorizontalAlignment="Center" />
            </TabItem>

            <TabItem Header="System Status">
                <TextBlock Text="System Status Tab Content" VerticalAlignment="Center" HorizontalAlignment="Center" />
            </TabItem>
        </TabControl>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Height="28">
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>

            <StatusBarItem Grid.Column="0">
                <StackPanel Orientation="Horizontal">
                    <Ellipse x:Name="StatusEllipse" Width="12" Height="12" Margin="5,0" Fill="Gray" />
                    <TextBlock x:Name="StatusText" Text="Not Listening" />
                </StackPanel>
            </StatusBarItem>

            <StatusBarItem Grid.Column="2">
                <TextBlock>
                    <Run Text="Current Lesson: " />
                    <Run Text="None" FontWeight="SemiBold" />
                </TextBlock>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
